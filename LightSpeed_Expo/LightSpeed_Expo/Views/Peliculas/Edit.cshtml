@model LightSpeed_Expo.Models.Pelicula
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="container">
    <div class="row">
        <div class="col-sm-offset-1 col-lg-10">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="center">Editar Película</h3>
                    <p class="pull-right">@Html.ActionLink("Atrás", "Index")</p>
                </div>
            </div>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <div>
                    <div class="form-group">
                        <label for="title">Título</label>
                        <input type="text" class="form-control" id="title" name="Titulo" value="@Model.Titulo">
                        @Html.ValidationMessageFor(model => model.Titulo)
                    </div>
                    <div class="form-group">
                        <label for="description">Descripción</label>
                        <textarea rows="4" cols="1" class="form-control" id="description" name="Descripcion">@Model.Descripcion</textarea>
                        @Html.ValidationMessageFor(model => model.Descripcion)
                    </div>
                </div>
                <p><input class="btn btn-default pull-right" type="submit" value="Guardar" /></p>
            }
        </div>
    </div>
</div>
