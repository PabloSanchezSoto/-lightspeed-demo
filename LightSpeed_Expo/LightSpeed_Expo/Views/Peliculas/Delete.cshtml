@model LightSpeed_Expo.Models.Pelicula
<div class="container">
    <div class="row">
        <div class="col-sm-offset-1 col-lg-10">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="center">Eliminar Película</h3>
                    <p class="pull-right">@Html.ActionLink("Atrás", "Index")</p>
                </div>
            </div>
            <hr />
            <h4>Está seguro que desea eliminar la siguiente película?</h4>
            <div><strong>Título:</strong> @Model.Titulo</div>
            <div><strong>Descripción:</strong> @Model.Descripcion</div>
            @using (Html.BeginForm())
            {
                <p><input class="btn btn-default pull-right" type="submit" value="Eliminar" /></p>
            }
        </div>
</div>
</div>
